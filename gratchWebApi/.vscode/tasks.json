{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/gratchWebApi.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/gratchWebApi.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/gratchWebApi.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "HerokuAdd",
            "type": "shell",
            "command": "git",
            "args": ["add", "${workspaceFolder}"]
        },
        {
            "label": "HerokuCommit",
            "type": "shell",
            "command": "git",
            "args": ["commit", "-am", "${relativeFile}"]
        },
        {
            "label": "HerokuDeploy",
            "type": "shell",
            "command": "git",
            "args": ["push", "heroku", "master"],
            "dependsOrder": "sequence",
            "dependsOn": ["HerokuAdd", "HerokuCommit"]
        }
    ]
}