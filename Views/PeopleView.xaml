<UserControl x:Class="gratch_desktop.Views.PeopleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:gratch_desktop.Views"
             
             xmlns:helpers="clr-namespace:gratch_desktop.Helpers"
             xmlns:vm="clr-namespace:gratch_desktop.ViewModels"
             xmlns:controls="clr-namespace:gratch_desktop.Controls"
             xmlns:vw="clr-namespace:gratch_desktop.Views"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:mat="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:icons="http://metro.mahapps.com/winfx/xaml/iconpacks" 
             
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ContentControl>
        <Control.DataContext>
            <vm:PeopleViewModel/>
        </Control.DataContext>
        <DockPanel Background="{StaticResource MahApps.Brushes.Control.Background}">
            <StackPanel DockPanel.Dock="Top">
                <ListView VerticalAlignment="Stretch"
                          Margin="10"
                          Style="{StaticResource MahApps.Styles.ListBox}">
                    <d:TextBlock Style="{StaticResource MaterialDesignBody1TextBlock}"
                                 Foreground="White">
                        Hello
                    </d:TextBlock>
                    <d:TextBlock Style="{StaticResource MaterialDesignBody1TextBlock}"
                                 Foreground="White">
                        World
                    </d:TextBlock>
                </ListView>
            </StackPanel>
            <Button DockPanel.Dock="Bottom"
                    VerticalAlignment="Bottom"
                    Margin="10">
                <TextBlock Style="{StaticResource MaterialDesignBody1TextBlock}">Add Person</TextBlock>
            </Button>
        </DockPanel>
    </ContentControl>
</UserControl>
