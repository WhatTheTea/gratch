{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    /*
    git add .
 git commit -am "models"
 git push heroku master
    */
    "version": "2.0.0",
    "tasks": [
        {
            "label": "HerokuApiAdd",
            "type": "shell",
            "command": "git",
            "args": ["add", "."]
        },
        {
            "label": "HerokuApiCommit",
            "type": "shell",
            "command": "git",
            "args": ["commit", "-am", "${file}"]
        },
        {
            "label": "HerokuApiDeploy",
            "type": "shell",
            "command": "git",
            "args": ["push", "heroku", "master"],
            "dependsOrder": "sequence",
            "dependsOn": ["HerokuApiAdd", "HerokuApiCommit"]
        }
    ]
}