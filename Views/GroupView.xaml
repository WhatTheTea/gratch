<UserControl x:Class="gratch_desktop.Views.GroupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             
             xmlns:helpers="clr-namespace:gratch_desktop.Helpers"
             xmlns:vm="clr-namespace:gratch_desktop.ViewModels"
             xmlns:controls="clr-namespace:gratch_desktop.Controls"
             xmlns:vw="clr-namespace:gratch_desktop.Views"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:mat="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:icons="http://metro.mahapps.com/winfx/xaml/iconpacks" 
             
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer Style="{StaticResource gratch.Styles.Menu.ScrollViewer}">
        <ScrollViewer.DataContext>
            <vm:GroupViewModel/>
        </ScrollViewer.DataContext>

        <WrapPanel Orientation="Horizontal"
                   VerticalAlignment="Top">
            <!--#region designdata-->
            <Border>
                <controls:GroupCard />
            </Border>
            <d:Border>
                <controls:GroupCard/>
            </d:Border>
            <d:Border>
                <controls:GroupCard/>
            </d:Border>
            <d:Border>
                <controls:GroupCard/>
            </d:Border>
            <d:Border>
                <controls:GroupCard/>
            </d:Border>
            <d:Border>
                <controls:GroupCard/>
            </d:Border>
            <d:Border>
                <controls:GroupCard/>
            </d:Border>
            <d:Border>
                <controls:GroupCard/>
            </d:Border>
            <d:Border>
                <controls:GroupCard/>
            </d:Border>
            <d:Border>
                <controls:GroupCard/>
            </d:Border>
            <d:Border>
                <controls:GroupCard/>
            </d:Border>
            <d:Border>
                <controls:GroupCard/>
            </d:Border>
            <!--#endregion designdata-->
            
        </WrapPanel>
        
    </ScrollViewer>
</UserControl>
